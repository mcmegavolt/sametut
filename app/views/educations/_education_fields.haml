%fieldset
  .row
    .span12

      .control-group
        = f.label :school, t(:'site.user.new.education_info.school_name'), :class => 'control-label'
        .controls
          = f.text_field :school, :class => 'span9'
  .row
    .span6

      .control-group
        = f.label t(:'site.user.new.education_info.start_date'), :class => 'control-label'
        .controls
          = f.text_field :start_date, 'data-behaviour' => 'datepicker'
          :javascript
            $('[data-behaviour~=datepicker]').datepicker({
                format: 'yyyy-mm-dd'
              });
    .span6

      .control-group
        = f.label t(:'site.user.new.education_info.end_date'), :class => 'control-label'
        .controls
          = f.text_field :end_date, 'data-behaviour' => 'datepicker'
          :javascript
            $('[data-behaviour~=datepicker]').datepicker({
                format: 'yyyy-mm-dd'
              });
  .row
    .span6
      .control-group
        = f.label :faculty, t(:'site.user.new.education_info.faculty'), :class => 'control-label'
        .controls
          = f.text_field :faculty, :size => 20

    .span6
      .control-group
        = f.label t(:'site.user.new.education_info.degree_level'), :class => 'control-label'
        .controls
          = f.select :education_degree_level_id, EducationDegreeLevel.all.collect{|c| [c.education_degree_level, c.id]}, { :prompt => t(:'site.user.new.selectors.degree') }
      .control-group
        .controls
          %i.icon-remove
          = link_to_remove_fieldset t(:'site.user.new.actions.remove'), f

  %hr/
