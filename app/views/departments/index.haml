#departments
  #index
    .row
      .span12
        %legend= t(:'site.departments.index.title')
        %p.muted
          = t(:'site.departments.index.count')
          = departments_count
        %table.table.table-striped.table-condensed
          %thead
            %th= t(:'site.departments.index.name')
            %th= t(:'site.departments.index.region')
            %th= t(:'site.departments.index.reg_date')
            
            - if admin_signed_in?
              %th
                Location Test

          - for s in departments
            %tr
              %td= link_to s.name, department_path(s)
              %td
                - if s.location
                  = s.location.state + ', ' +s.location.city
              %td= time_ago_in_words(s.user.created_at) + t(:'site.user.vacancies.ago')
              - if admin_signed_in?
                %td
                  - if s.location 
                    - if s.location.latitude == 50.44405 && s.location.longitude == 30.52083
                      = link_to edit_department_path(s), :target => '_blank' do
                        %i.icon-exclamation-sign
                        wrong location
                    - else
                      = link_to "http://maps.google.com.au/maps?ll=#{s.location.latitude},#{s.location.longitude}", :target => "_blank" do
                        = s.location.latitude
                        = s.location.longitude
                  - else
                    %i.icon-remove
                      NO LOCATION
        = paginate departments, :theme => 'twitter-bootstrap'