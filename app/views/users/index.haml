%h1 Listing users
%p
  %b
    Registered Users:
  = @users.size
%table
  %tr
    %th Email
    %th Permalink
    %th
    %th
  - @users.each do |user|
    %tr
      %td
        = user.email
      %td

      %td
        = link_to user, :class => 'primary button' do
          %span.class
          Show
        = link_to edit_user_path(user), :class => "button" do
          %span.pen.icon
          Edit
        = link_to user, :confirm => 'Are you sure?', :class => "negative button", :method => :delete do
          %span.cross.icon
          Destroy
%br
= link_to new_user_path, :class => 'positive pill button' do
  %span.user.icon
  New User