%p#notice.success
  = notice


%p
  Email:
  %b
    = @user.email

%p
  %b
    User ID:
  = @user.id

%p
  %b
    Activated:
  - if @user.enabled?
    Yes
  - else
    No

%p
  %b
    Name:
  = @user.applicant.first_name
  = @user.applicant.middle_name
  = @user.applicant.last_name
%p
  %b
    Birth date:
  = @user.applicant.profile.birth_date


%p
  %b
    Education:
  %ol
    - for education in @user.applicant.educations
      %li
        = EducationSchoolType::SCHOOL_TYPES[education.school_type][0]

%p
  %b
    Social Activities:
  %ol
    - for social_activity in @user.applicant.social_activities
      %li
        = social_activity.activity_type
        = social_activity.duties
        = social_activity.position

%p
  %b
    Work Experiences
  %ol
    - for work_experience in @user.applicant.work_experiences
      %li
        = work_experience.start_date
        = work_experience.end_date
        = work_experience.organization

%div
  = link_to 'Edit', edit_user_path(@user), :class => 'positive button'
  = link_to 'Back', users_path, :class => 'button'

