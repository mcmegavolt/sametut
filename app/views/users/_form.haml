= form_for @user, :html => {:class => 'form-horizontal'} do |f|

  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li
            = msg


  .fieldset
    %legend
      Please, edit your info and save
    .control-group
      %label{:class => 'control-label'}
        Email
      .controls
        = f.text_field :email, :class => 'span3', :disabled => true, :value => current_user.email
        %p.help-block
          You can't change it on this page

    = f.fields_for :applicant do |a|
      %legend
        Applicant
      .control-group
        %label{:class => 'control-label'}
          = a.label t(:'site.user.new.main_info.first_name')
        .controls
          = a.text_field :first_name
      .control-group
        %label{:class => 'control-label'}
          = a.label t(:'site.user.new.main_info.middle_name')
        .controls
          = a.text_field :middle_name
      .control-group
        %label{:class => 'control-label'}
          = a.label t(:'site.user.new.main_info.last_name')
        .controls
          = a.text_field :last_name
      .control-group
        %label{:class => 'control-label'}
          = a.label t(:'site.user.new.main_info.permalink')
        .controls
          = a.text_field :permalink

      %legend
        Profile
      = a.fields_for :profile do |p|
        = render 'profile_fields', :p => p
      %legend
        = t(:'site.user.new.headers.education')
      = a.fields_for :educations do |ed|
        = render 'education_fields', :f => ed
      %p
        = link_to_add_fields t(:'site.user.new.actions.add'), a, :educations

      %legend
        = t(:'site.user.new.headers.social_activities')
      = a.fields_for :social_activities do |sa|
        = render 'social_activity_fields', :f => sa
      %p
        = link_to_add_fields t(:'site.user.new.actions.add'), a, :social_activities

      %legend
        = t(:'site.user.new.headers.work_experience')
      = a.fields_for :work_experiences do |we|
        = render 'work_experience_fields', :f => we
      %p
        = link_to_add_fields t(:'site.user.new.actions.add'), a, :work_experiences

    .form-actions
      = f.submit 'Save user', :class => 'btn btn-primary'
      %button.btn
        Cancel