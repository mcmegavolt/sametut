= form_for @user do |f|

  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li
            = msg

  .form

    .field
      = f.label :email
      = f.text_field :email
    .field
      = f.label :permalink
      = f.text_field :permalink
    .field
      = f.label :enabled?
      = f.check_box :enabled, :checked => @user.enabled?

    = f.fields_for :applicant do |a|

      .field
        = a.label :first_name
        = a.text_field :first_name
      .field
        = a.label :middle_name
        = a.text_field :middle_name
      .field
        = a.label :last_name
        = a.text_field :last_name

      = a.fields_for :profile do |p|
        = render 'profile_fields', :p => p

      = a.fields_for :social_activities do |sa|
        = render 'social_activity_fields', :f => sa
        %p
          = link_to_add_fields 'Add a social activity', a, :social_activities


    .actions
      = f.submit 'Submit', :class => 'big positive button'
