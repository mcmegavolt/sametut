%head
  %meta{:charset => "utf-8"}/
  /
    Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
  %title= t(:'site.logo_text')
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "author"}/
  / Mobile viewport optimized: j.mp/bplateviewport
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0, maximum-scale=1.0"}
  / Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}/

  = include_gon
  - if params[:controller] == 'schools' && (params[:action] == 'edit' || params[:action] == 'new')
    %script{:src => "http://maps.googleapis.com/maps/api/js?libraries=places&sensor=false&language=uk", :type => "text/javascript"}  

  = stylesheet_link_tag "application"
  = javascript_include_tag "application"

  
  /[if IE]
    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }

  = csrf_meta_tags
  = render :partial => 'shared/google_analytics_code'

%body
  .navbar.navbar-fixed-top
    .navbar-inner
      .container
        = link_to root_path, :class => 'brand' do
          = image_tag 'logo.png', :width => '200px'
        = render 'shared/navbar'
  .container
    .content
      .row{:style => 'margin-bottom: 20px;'}
        .span12
          - if user_signed_in?
            = render :partial => '/shared/top_nav'

      = render 'shared/flash_messages'
      = yield

      .row
        .span12
          .footer
            %hr/
            %p
              = t(:'site.copyright_html', :date => Date.today.year).html_safe
              - if current_admin
                = link_to 'Адмін-панель', admin_path
                \|
                = link_to 'Вийти', destroy_admin_session_path
              - else
                = link_to '[+]', new_admin_session_path
              %br/
              / = t(:'site.ministry_of_education_html')

  
  

  = yield :scripts
