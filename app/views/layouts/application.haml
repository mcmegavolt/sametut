%head
  %meta{:charset => "utf-8"}/
  /
    Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
  %meta{"http-equiv"=>"X-UA-Compatible", :content=>"IE=edge,chrome=1"}
  %title= t(:'site.logo_text')
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "author"}/
  / Mobile viewport optimized: j.mp/bplateviewport
  %meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0;"}
  / Place favicon.ico and apple-touch-icon.png in the root of your domain and delete these references
  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}/

  = stylesheet_link_tag "application"
  /[if IE]
    %script{ :src => "http://html5shiv.googlecode.com/svn/trunk/html5.js" }
  = csrf_meta_tags

  %body{:style => "padding-top: 60px"}
    - if user_signed_in? || admin_signed_in?
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            = link_to t(:'site.logo_text'), root_path, :class => 'brand'
            .nav-collapse
              = render :partial => '/shared/top_nav'

    .container
      .header
        .row
          .span3
            .logo
              SameTut
          .span9
            .main-menu
              %ul.nav.nav-pills
                %li
                  = link_to t(:'site.nav.back_to_site'), root_path
                %li
                  = link_to t(:'site.nav.new_user'), new_user_registration_path
                %li
                  = link_to t(:'site.user.devise.links.sign_in'), new_user_session_path
      .content
        = render 'shared/flash_messages'
        = yield

        .row
          .span12
            .footer
              %hr/
              %p
                SameTut - All rights Reserved &copy; 2011. Powered by Aleksandr Ponomarenko.
                - if current_admin
                  = link_to 'Admin Panel', admin_path
                  = link_to 'Log Out', destroy_admin_session_path
                - else
                  = link_to 'Admin Login', new_admin_session_path

    = javascript_include_tag "application"