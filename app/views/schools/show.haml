.row
  .span12
    - if admin_signed_in?
      = link_to  edit_school_path(school) do
        %i.icon-pencil
        Edit
    %legend= school.name
    .row
      .span3
        - unless !school.director_profile
          = image_tag school.director_profile.director_photo_url(:thumb), :class => 'thumbnail', :title => t(:'site.user.profiles.school.director.legend') + ": " + school.director_profile.name
      .span9

        %ul#ProfileTabs.nav.nav-tabs
          %li.active
            %a( href = "#main-info" data-toggle = "tab" )
              = t(:'site.user.show_profile.main_info')
          %li
            %a( href = "#video" data-toggle = "tab" )
              = t(:'site.user.profiles.school.show.video_tab')


        #myTabContent.tab-content
          #main-info.tab-pane.fade.active.in
            = school.description.html_safe
          #video.tab-pane.fade.in
            - unless school.video_url.empty?
              = UrlToMediaTag.convert(school.video_url, :width => 480, :height => 320)
            - else
              No video presentation



    .row
      .span12
        -#%legend= t(:'site.address.map')
        %hr/
        = gmaps4rails(school.location.to_gmaps4rails)
