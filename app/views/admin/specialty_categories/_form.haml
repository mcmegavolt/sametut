= form_for specialty_category, :url => specialty_category.new_record? ? admin_specialty_categories_path : admin_specialty_category_path(specialty_category), :html => { :class => 'form-horizontal' }  do |f|
  = render :partial => 'shared/form_errors', :locals => { :object => specialty_category }

  %fieldset
    .control-group
      %label.control-label= t(:'admin.specialty_categories.name')
      .controls
        = f.text_field :name

  .form-actions
    = f.submit t(:'site.user.edit_profile.save_applicant'), :class => 'btn btn-large btn-success'
