.control-group
  %label.control-label Type location
  .controls        
    = text_field_tag "geocomplete", nil, :class => 'span8', :autocomplete => "off", :id => 'geocomplete'

    .geocomplete-map.img-rounded{:style => 'margin-top: 20px;'}
    = link_to '#', :style => "display: none;", :id => "reset" do
      %i.icon-refresh
      Скинути вказівник на вихідну позицію




.control-group
  %label.control-label
    = t(:'site.address.street')
  .controls
    = f.text_field :street, :populate => 'route', :class => 'span6'
.control-group
  %label.control-label
    = t(:'site.address.building')
  .controls
    = f.text_field :building, :populate => 'street_number', :class => 'span1'
.control-group
  %label.control-label
    = t(:'site.address.apartment')
  .controls
    = f.text_field :apartment, :class => 'span1'
.control-group
  %label.control-label
    = t(:'site.address.gmaps')
  .controls
    %label.checkbox
      = f.check_box :gmaps
      = t(:'site.address.gmaps_help_html')

